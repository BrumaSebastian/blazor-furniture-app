@using Microsoft.AspNetCore.Components.Authorization
@using System.Security.Claims
@inject AuthenticationStateProvider AuthenticationStateProvider
@inject NavigationManager Navigation

<div class="login-display">
    <AuthorizeView>
        <Authorized>
            <div class="user-info d-flex align-items-center gap-3">
                <div class="user-details">
                    <strong>@GetDisplayName(context.User)</strong>
                    <div class="user-roles">
                        @foreach (var role in GetUserRoles(context.User))
                        {
                            <span class="badge bg-secondary me-1">@role</span>
                        }
                    </div>
                </div>
                <button class="btn btn-outline-danger btn-sm" @onclick="Logout">
                    <i class="bi bi-box-arrow-right"></i> Logout
                </button>
            </div>
        </Authorized>
        <NotAuthorized>
            <button class="btn btn-primary" @onclick="Login">
                <i class="bi bi-box-arrow-in-right"></i> Login
            </button>
        </NotAuthorized>
    </AuthorizeView>
</div>

@code {
    private void Login()
    {
        Navigation.NavigateTo("/Account/Login", forceLoad: true);
    }

    private void Logout()
    {
        Navigation.NavigateTo("/Account/Logout", forceLoad: true);
    }

    private string GetDisplayName(ClaimsPrincipal user)
    {
        return user.FindFirst("first_name")?.Value + " " + user.FindFirst("last_name")?.Value
            ?? user.FindFirst(ClaimTypes.Name)?.Value
            ?? user.FindFirst("preferred_username")?.Value
            ?? "Unknown User";
    }

    private IEnumerable<string> GetUserRoles(ClaimsPrincipal user)
    {
        return user.FindAll(ClaimTypes.Role).Select(c => c.Value)
            .Concat(user.FindAll("client_role").Select(c => c.Value))
            .Distinct();
    }
}


<style>
    .login-display {
        padding: 0.5rem;
    }

    .user-details {
        text-align: right;
    }

    .user-roles {
        font-size: 0.8rem;
        margin-top: 0.2rem;
    }
</style>