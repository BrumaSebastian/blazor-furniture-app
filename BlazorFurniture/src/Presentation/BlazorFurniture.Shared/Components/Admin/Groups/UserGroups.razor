@using BlazorFurniture.Shared.DTOs.Users.Responses

<MudPaper Elevation="6">
	<MudText Typo="Typo.h5" GutterBottom=true Class="ml-4 pt-4">My Groups</MudText>
	<MudList T="GroupPermissions" Dense=true Gutters=true>
		@foreach (var group in Groups)
		{
			<MudDivider DividerType="DividerType.FullWidth" />
			<MudListItem Href="@($"/admin/groups/{group.Id}")">
				<AvatarContent>
					<MudAvatar>
						<MudImage Src="https://picsum.photos/200/300" />
					</MudAvatar>
				</AvatarContent>
				<ChildContent>
					<MudText Typo="Typo.h6">@group.Name</MudText>
					<MudText Typo="Typo.subtitle2" Color="Color.Secondary">Role: @group.Role.ToString()</MudText>
				</ChildContent>
			</MudListItem>
		}
	</MudList>
</MudPaper>

@code {
	[Parameter] public IReadOnlyList<GroupPermissions> Groups { get; set; } = [];
}