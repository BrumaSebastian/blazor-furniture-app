<MudCard Elevation="2">
    <MudCardHeader>
        <MudText Typo="Typo.h6">@Title</MudText>
    </MudCardHeader>
    <MudCardContent>
        <MudTimeline TimelinePosition="TimelinePosition.Start">
            @foreach (var activity in Activities)
            {
                <MudTimelineItem Color="@activity.Color" Size="Size.Small">
                    <ItemOpposite>
                        <MudText Typo="Typo.body2" Color="Color.Secondary">@activity.Time</MudText>
                    </ItemOpposite>
                    <ItemContent>
                        <MudText Typo="Typo.body1">@activity.Title</MudText>
                        <MudText Typo="Typo.body2" Color="Color.Secondary">@activity.Description</MudText>
                    </ItemContent>
                </MudTimelineItem>
            }
        </MudTimeline>
    </MudCardContent>
</MudCard>

@code {
    [Parameter] public string Title { get; set; } = "Recent Activity";
    [Parameter] public List<ActivityItem> Activities { get; set; } = new();

    public class ActivityItem
    {
        public string Title { get; set; } = string.Empty;
        public string Description { get; set; } = string.Empty;
        public string Time { get; set; } = string.Empty;
        public Color Color { get; set; } = Color.Primary;
    }
}