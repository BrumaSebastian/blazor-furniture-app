@using BlazorFurniture.Shared.Resources.Pages.Admin
@rendermode InteractiveWebAssembly

<div Class="d-flex flex-column" style="height:100%">
	<MudNavMenu Color="Color.Info">
		<MudNavLink Href="/" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Home">Home</MudNavLink>
        <MudNavLink Href="/admin/dashboard" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Dashboard">@AdminResource.nav_dashboard</MudNavLink>

        <AuthorizeView Policy="@Permissions.WithPrefix(Permissions.VIEW_GROUPS)">
            <Authorized>
                <MudNavLink Href="/admin/groups" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Group">@AdminResource.nav_groups</MudNavLink>
            </Authorized>
        </AuthorizeView>

        <AuthorizeView Policy="@Permissions.WithPrefix(Permissions.VIEW_USERS)">
            <Authorized>
                <MudNavLink Href="/admin/users" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.People">@AdminResource.nav_users</MudNavLink>
            </Authorized>
        </AuthorizeView>
	</MudNavMenu>
   
	<MudSpacer />

	<MudNavMenu Color="Color.Info">
		<MudDivider />
		<MudNavLink Href="api/authentication/logout" Icon="@Icons.Material.Filled.Login">
			<MudText>@CommonResource.button_logout</MudText>
		</MudNavLink>
	</MudNavMenu>
</div> 