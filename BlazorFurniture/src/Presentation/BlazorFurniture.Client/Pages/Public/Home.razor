                </MudNavLink>
                <MudNavLink Icon="@Icons.Custom.Brands.LinkedIn" Target="/">
                    LinkedIn
                </MudNavLink>
                <MudNavLink Icon="@Icons.Custom.Brands.YouTube" Target="/">
