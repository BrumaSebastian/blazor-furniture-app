@inherits LayoutComponentBase
@using BlazorFurniture.Templates.Email.Shared

<table width="100%" cellpadding="0" cellspacing="0" role="presentation" style="font-family: Arial, sans-serif; background-color:#f5f5f5; padding:20px 0;">
	<tr>
		<td align="center">
			<table width="600" cellpadding="0" cellspacing="0" role="presentation" style="background-color:#ffffff; border:1px solid #e5e5e5; border-radius:6px; overflow:hidden;">
				<tr>
					<td style="padding:24px 24px 0 24px;">
						@if (Header is not null)
						{
							@Header
						}
					</td>
				</tr>
				<tr>
					<td class="email-content" style="padding:16px 24px; white-space: pre-line; line-height:1.5; color:#111827; font-family: Arial, sans-serif; font-size:14px;">
						@Body
					</td>
				</tr>
				<tr>
					<td style="padding:0 24px 24px 24px; color:#666; font-size:12px;">
						@if (Footer is not null)
						{
							@Footer
						}
					</td>
				</tr>
			</table>
		</td>
	</tr>
</table>

@code {
	[Parameter] public RenderFragment? Header { get; set; }
	[Parameter] public RenderFragment? Footer { get; set; }
}
